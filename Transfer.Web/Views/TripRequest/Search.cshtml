@model Transfer.Web.Models.TripRequest.RequestSearchFilter

@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common

@section Styles {
    <link rel="stylesheet" href="~/css/TripRequest/Search.css" />
}

<div class="container">
    <div class="row blank-row"></div>
    <div class="row blank-row"></div>
    <div class="row">
        <div class="t-col col-12 crumbs">
            ---&nbsp;&nbsp;&nbsp;<a class="top-button-a" asp-controller="Home" asp-action="Index">Главная</a>&nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;<a class="top-button-a" asp-controller="TripReques" asp-action="Search">Перевозчики</a>
        </div>
    </div>
    <div class="row blank-row"></div>
    <div class="row">
        <div class="t-col col-12 col-md-6 crb-avatar">
            Здравствуйте, @Security.CurrentAccount.FirstName @Security.CurrentAccount.LastName!
        </div>
        <div class="t-col col-12 col-md-6 text-end crb-location">
            <i class="fas fa-location-arrow"></i> Ваш регион: <span class="city">Александровск-Сахалинский</span>
        </div>
    </div>
    <div class="row blank-row"></div>
    <div class="row">
        <div class="t-col col-10">
            <h1 style="color: #0f4c71">Актуальные запросы на поездки</h1>
        </div>
    </div>
    <div class="row blank-row"></div>
    <form id="TripRequestSearch" asp-controller="TripRequest" asp-action="Search" data-ajax="true" data-ajax-method="POST" data-ajax-update="#TripRequestSearch">
        @await Html.PartialAsync("~/Views/TripRequest/SearchResults.cshtml", Model)
    </form>
</div>